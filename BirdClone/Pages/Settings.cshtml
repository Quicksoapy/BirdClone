@page
@model BirdClone.Pages.Settings
@{
    ViewData["Title"] = "Account settings";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <form method="post">
        <div class="form-group">
            <label>Username:</label>
            <input type="text" asp-for="@Model.SettingsModel.Username"/>
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input type="password" asp-for="@Model.SettingsModel.Password"/>
        </div>
        <div class="form-group">
            <label>E-mail Address:</label>
            <input type="text" asp-for="@Model.SettingsModel.Email"/>
        </div>
        <div class="form-group">
            <label>Country:</label>
            <input type="text" asp-for="@Model.SettingsModel.Country"/>
        </div>
        <button class="btn btn-primary" type="submit">Edit</button>
    </form>
</div>
</body>
</html>